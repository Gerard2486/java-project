pipeline{
     agent none

	options{
	   buildDiscarder(logRotator(numToKeepStr: '3', artifactNumToKeepStr: '2'))
	   }
     
     stages {
	stage('Unit Tests') {
        agent {
	    label 'apache'
	      }   
	 steps {
        sh 'ant -f test.xml -v'
        junit 'reports/result.xml'
            }
          }    
	stage('build') {
	agent {
            label 'apache'
              }   
	steps {
	   sh 'ant -f build.xml -v'
	  }
        post{
        success {
        archiveArtifacts artifacts: 'dist/*.jar',fingerprint: true
             }
           }
	}
	stage('deploy') {
	agent {
            label 'apache'
              }  
	steps {
	 sh "mkdir /var/www/html/rectangles/all/${env.BRANCH_NAME}"
	 sh "cp dist/rectangle_${env.BUILD_NUMBER}.jar /var/www/html/rectangles/all/${env.BRANCH_NAME}/" 
          } 
	}
	stage("Running on CentOS") {
        agent {
        label 'apache'
        }
        steps {
        sh "wget http://gerard243.mylabserver.com/rectangles/all/${env.BRANCH_NAME}/rectangle_${env.BUILD_NUMBER}.jar"
        sh "java -jar rectangle_${env.BUILD_NUMBER}.jar 3 4"
            }
          }
        stage("Test on Debian") {
        agent {
          docker 'openjdk:8u151-jre'
          }
        steps {
        sh "wget http://gerard243.mylabserver.com/rectangles/all/${env.BRANCH_NAME}/rectangle_${env.BUILD_NUMBER}.jar"
        sh "java -jar rectangle_${env.BUILD_NUMBER}.jar 3 4"
            }
          }
	stage ('promote to Green') {
	agent {
            label 'apache'
              }  
	when {
	branch 'master'
	}
	steps {
	 sh "cp /var/www/html/rectangles/all/rectangle_${env.BUILD_NUMBER}.jar /var/www/html/rectangles/green/rectangle_${env.BUILD_NUMBER}.jar"
	   }
	 }
	stage ('promote development branch to  master') {
	agent {
	    label 'apache'
	      }
	when {
	branch 'development';
	     }
	steps {
	echo "stashing any changes"
	sh 'git stash'
	echo "Checking out DevelopmentBrch"
	sh 'git checkout development'
	echo "Checking out master"
	sh 'git checkout master'
	echo "Pushing to master"
	sh 'git push origin master'
	 }
	}      
      }
    }
